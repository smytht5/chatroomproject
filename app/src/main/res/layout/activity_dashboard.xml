<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Dashboard"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBrown">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shamrock Talk"
            android:padding="10dp"/>


        <ImageButton
            android:id="@+id/imgbtn_Shamrock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_clover"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="322dp"
                android:layout_height="50dp"
                android:id="@+id/btn_jHall"
                android:background="@null"
                android:gravity="left"
                android:padding="10dp"
                android:text="James Hall" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@null"
                android:text=">" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_rHall"
                android:layout_width="322dp"
                android:layout_height="50dp"
                android:background="@null"
                android:gravity="left"
                android:padding="10dp"
                android:text="Robinson Hall" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@null"
                android:text=">" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_sHall"
                android:layout_width="322dp"
                android:layout_height="50dp"
                android:background="@null"
                android:gravity="left"
                android:padding="10dp"
                android:text="Science Hall" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@null"
                android:text=">" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_bHall"
                android:layout_width="322dp"
                android:layout_height="50dp"
                android:background="@null"
                android:gravity="left"
                android:padding="10dp"
                android:text="Business Hall" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@null"
                android:text=">" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>